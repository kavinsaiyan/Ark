<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ark.Resources.Styles">
    <Style x:Key="songSearchStyle" TargetType="TextBox">
        <Setter Property="FontFamily" Value="Gontserrat"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{DynamicResource _contentLight}"/>
        <Setter Property="Background" Value="{DynamicResource _containerDark}"/>
       
    </Style>
    <Style x:Key="songInfo" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{DynamicResource _contentLight}"/>
        <Setter Property="Background" Value="{DynamicResource _containerDark}"/>

    </Style>
</ResourceDictionary>